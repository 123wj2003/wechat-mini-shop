<view bind:tap="onPress">
    <text wx:if="{{state === 'unstart'}}" bind:tap="onStart">{{defaultText}}</text>
    <countdown
            wx:if="{{state === 'ongoing'}}"
            countdown="{{seconds}}"
            numStyle="background-color:#fff;padding:0 5px;color:#333;border-radius:3px;font-size:12px"
            format="ssç§’"
            bind:onEnd="onEnd"
    />
</view>
