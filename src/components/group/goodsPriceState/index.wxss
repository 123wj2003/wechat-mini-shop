.price-time {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50px;
    overflow: hidden;
}

.price {
    background-color: #FF635C;
    color: #ffffff;
    display: flex;
    flex: 1;
    height: 100%;
    align-items: center;
}

.price > i {
    margin-left: 15px;
    line-height: 14px;
    height: 14px;
    font-size: 14px;
}

.price > text {
    font-size: 23px;
    line-height: 23px;
    height: 23px;
    font-weight: 800;
    margin-left: 5px;
}

.price > label {
    background-color: rgba(255, 255, 255, 0.22);
    font-size: 10px;
    padding: 0 3px;
    margin-left: 10px;
}

.time {
    width: 150px;
}
